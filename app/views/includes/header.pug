.container
    .row
        .page-header.clearfix
            h1#{title}
            .col-md-4
                small 时光的余热
.navbar.navbar-default.navbar-fixed-bottom
    .container
        .navbar-header
            a.navbar-brand(href='/') 时光的余热
        if user && user.nickname
            p.navbar-text.navbar-right
                span 欢迎您,#{user.nickname}
                span &nbp;|&nbsp;
                a.navbar-link(href='/logout') 登出
        else
            p.navbar-text.navbar-right
                a.navbar-link(href='#',data-toggle='modal',data-target='#signupModal') 注册
                span &nbsp;|&nbsp;
                a.navbar-link(href='#',data-toggle='modal',data-target='#signinModal') 登录
#signupModal.modal.fade
    .modal-dialog
        .modal-content
            form(method='POST',action='/user/signup')
                .modal-header 注册
                .modal-body
                    .form-group
                        label(for='signupEmail') 用户邮箱
                        input#signupEmail.form-control(name='user[email]', type='text')
                    .form-group
                        label(for='signupNickname') 用户尼称
                        input#signupNickname.form-control(name='user[nickname]', type='text')
                    .form-group
                        label(for='signupPassword') 密码
                        input#signupPassword.form-control(name='user[password]', type='password')
            .modal-footer
                button.btn.btn-default(type='button',data-dismiss='modal') 关闭
                button.btn.btn-success(type='submit') 提交
#signinModal.modal.fade
    .modal-dialog
        .modal-content
            form(method='POST',action='/user/signin')
                .modal-header 登录
                .modal-body
                    .form-group
                        label(for='signinEmail') 用户邮箱
                        input#signinEmail.form-control(name='user[email]', type='text')
                    .form-group
                        label(for='signinPassword') 用户邮箱
                        input#signinPassword.form-control(name='user[password]', type='password')
                .modal-footer
                    button.btn.btn-default(type='button',data-dismiss='modal') 关闭
                    button.btn.btn-success(type='submit') 提交
